rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user belongs to the specified school
    function isFromSchool(schoolId) {
      return isAuthenticated() && getUserData().schoolId == schoolId;
    }

    // Check if user has a specific role in their school
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // Check if parent is linked to a specific student
    function isParentOf(studentId) {
      return hasRole('parent') && exists(/databases/$(database)/documents/parent_student_links/$(request.auth.uid)_$(studentId));
    }

    // Users: Can read/write their own profile. Admin can manage school users. Parents can see their child's profile.
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isFromSchool(resource.data.schoolId) || isParentOf(userId));
      allow write: if isAuthenticated() && (request.auth.uid == userId || (isAdmin() && request.resource.data.schoolId == getUserData().schoolId));
    }

    // Schools: Public read for basic info (signup), Admin write
    match /schools/{schoolId} {
      allow read: if true;
      allow write: if isAdmin() && isFromSchool(schoolId);
      // Only allow school creation if:
      // 1. User is not authenticated (new signup), OR
      // 2. User is admin and schoolId matches their school, OR
      // 3. User is attempting to create their own school for the first time (validated via Cloud Function)
      allow create: if !request.auth || (isAdmin() && request.resource.data.adminUid == request.auth.uid && !exists(/databases/$(database)/documents/schools/$(schoolId)));
    }

    // Classes & Subjects: School-isolated
    match /classes/{classId} {
      allow read, write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId);
    }
    match /subjects/{subjectId} {
      allow read, write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId);
    }

    // Parent-Student Links: School-isolated, admin-managed
    match /parent_student_links/{linkId} {
      allow read: if isAuthenticated() && (request.auth.uid in resource.data.parentIds || (isAdmin() && isFromSchool(resource.data.schoolId)));
      allow write: if isAdmin() && isFromSchool(request.resource.data.schoolId);
      allow create: if isAdmin() && isFromSchool(request.resource.data.schoolId);
      allow delete: if isAdmin() && isFromSchool(resource.data.schoolId);
    }

    // Attendance & Results: School-isolated, with parent-student validation
    match /attendance/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (resource.data.studentId == request.auth.uid || isAdmin() || isParentOf(resource.data.studentId));
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (isAdmin() || hasRole('staff'));
    }

    // Exam Results: School-isolated teacher/staff write, student/parent read own results
    match /results/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (resource.data.studentId == request.auth.uid || isAdmin() || hasRole('staff') || isParentOf(resource.data.studentId));
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (isAdmin() || hasRole('staff'));
    }

    // AI Scan Results: School-isolated staff write, admin/student/parent read
    match /ai_scan_results/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (hasRole('staff') || hasRole('admin') || (hasRole('student') && resource.data.studentId == request.auth.uid) || (hasRole('parent') && exists(/databases/$(database)/documents/parent_student_links/$(request.auth.uid)_$(resource.data.studentId))));
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (isAdmin() || hasRole('staff'));
      allow create: if isFromSchool(request.resource.data.schoolId) && (isAdmin() || hasRole('staff'));
    }

    // Lesson Notes: School-isolated staff write, staff/admin read
    match /notes/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (hasRole('staff') || isAdmin());
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (request.auth.uid == resource.data.staffId || isAdmin());
      allow create: if isFromSchool(request.resource.data.schoolId) && (hasRole('staff') || isAdmin());
    }

    // Exams & Questions: School-isolated staff write, staff/admin read
    match /exams/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (hasRole('staff') || isAdmin());
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (request.auth.uid == resource.data.staffId || isAdmin());
      allow create: if isFromSchool(request.resource.data.schoolId) && (hasRole('staff') || isAdmin());
    }

    // Terms: School-isolated admin write, all school members read
    match /terms/{id} {
      allow read: if isFromSchool(resource.data.schoolId);
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && isAdmin();
      allow create: if isFromSchool(request.resource.data.schoolId) && isAdmin();
    }

    // Staff Assignments: School-isolated admin write, staff/admin read
    match /staff_assignments/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (hasRole('staff') || isAdmin());
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && isAdmin();
      allow create: if isFromSchool(request.resource.data.schoolId) && isAdmin();
    }

    // Student Classes: School-isolated admin write, staff/admin read
    match /student_classes/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (hasRole('staff') || isAdmin());
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && isAdmin();
      allow create: if isFromSchool(request.resource.data.schoolId) && isAdmin();
    }

    // Student Wallets: School-isolated, student/parent/admin access
    match /student_wallets/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (resource.data.studentId == request.auth.uid || isAdmin() || hasRole('bursar') || isParentOf(resource.data.studentId));
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (isAdmin() || hasRole('bursar'));
    }

    // Financial Module: School-isolated bursar/admin access
    match /financial_transactions/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (isAdmin() || hasRole('bursar') || (resource.data.parentId == request.auth.uid) || isParentOf(resource.data.studentId));
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (isAdmin() || hasRole('bursar'));
      allow create: if isFromSchool(request.resource.data.schoolId) && (isAdmin() || hasRole('bursar'));
    }

    // Chat Sessions: Student/parent read/write own, admin read all
    match /chat_sessions/{id} {
      allow read: if isFromSchool(resource.data.schoolId) && (resource.data.studentId == request.auth.uid || isAdmin() || isParentOf(resource.data.studentId));
      allow write: if isFromSchool(resource.data.schoolId || request.resource.data.schoolId) && (resource.data.studentId == request.auth.uid || isAdmin());
      allow create: if isFromSchool(request.resource.data.schoolId) && (hasRole('student') || hasRole('parent') || isAdmin());
    }

    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
