rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user has a specific role
    function hasRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }
    
    // Helper to check if user is admin or bursar
    function isFinancialStaff() {
      return hasRole('admin') || hasRole('bursar');
    }

    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Financial Transactions: Only Admin/Bursar can read/write
    match /financial_transactions/{transactionId} {
      allow read, write: if request.auth != null && isFinancialStaff();
    }

    // Financial Categories: authenticated users can read (for dropdowns), only fin staff write
    match /financial_categories/{categoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isFinancialStaff();
    }

    // Staff Payroll: Only Admin/Bursar
    match /staff_payroll/{payrollId} {
      allow read, write: if request.auth != null && isFinancialStaff();
    }
    
    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
