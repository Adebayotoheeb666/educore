rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to get user data from Firestore
    function getUserData() {
      return firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data;
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user belongs to the specified school
    function isFromSchool(schoolId) {
      return isAuthenticated() && getUserData().schoolId == schoolId;
    }

    // Check if user has a specific role
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    function isAdmin() {
      return hasRole('admin');
    }

    // Check if parent is linked to a specific student
    function isParentOf(studentId) {
      return hasRole('parent') && firestore.exists(/databases/(default)/documents/parent_student_links/$(request.auth.uid)_$(studentId));
    }

    // School logos and branding
    match /schools/{schoolId}/logo {
      allow read: if true; // Public read for branding
      allow write: if isFromSchool(schoolId) && isAdmin();
    }

    match /schools/{schoolId}/documents/{allPaths=**} {
      allow read: if isFromSchool(schoolId);
      allow write: if isFromSchool(schoolId) && isAdmin();
    }

    // Student profile images
    match /students/{studentId}/profile-image {
      allow read: if isFromSchool(getUserData().schoolId) && (request.auth.uid == studentId || isAdmin() || isParentOf(studentId));
      allow write: if isFromSchool(getUserData().schoolId) && (request.auth.uid == studentId || isAdmin());
      allow delete: if isFromSchool(getUserData().schoolId) && isAdmin();
    }

    // Student documents (scripts, assignments)
    match /students/{studentId}/documents/{allPaths=**} {
      allow read: if isFromSchool(getUserData().schoolId) && (request.auth.uid == studentId || hasRole('staff') || isAdmin() || isParentOf(studentId));
      allow write: if isFromSchool(getUserData().schoolId) && (request.auth.uid == studentId || hasRole('staff') || isAdmin());
      allow delete: if isFromSchool(getUserData().schoolId) && isAdmin();
    }

    // Paper scanner uploads (exam scripts)
    match /paper-scans/{schoolId}/{allPaths=**} {
      allow read: if isFromSchool(schoolId) && (hasRole('staff') || isAdmin());
      allow write: if isFromSchool(schoolId) && (hasRole('staff') || isAdmin());
      allow delete: if isFromSchool(schoolId) && isAdmin();
    }

    // Staff materials (lesson notes, PDFs)
    match /staff/{staffId}/materials/{allPaths=**} {
      allow read: if isFromSchool(getUserData().schoolId) && (request.auth.uid == staffId || isAdmin());
      allow write: if isFromSchool(getUserData().schoolId) && (request.auth.uid == staffId || isAdmin());
      allow delete: if isFromSchool(getUserData().schoolId) && (request.auth.uid == staffId || isAdmin());
    }

    // School curriculum PDFs
    match /schools/{schoolId}/curriculum/{allPaths=**} {
      allow read: if isFromSchool(schoolId) && (hasRole('staff') || isAdmin());
      allow write: if isFromSchool(schoolId) && isAdmin();
      allow delete: if isFromSchool(schoolId) && isAdmin();
    }

    // Temporary files (should be cleaned up)
    match /temp/{allPaths=**} {
      allow read, write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }

    // Default: Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
